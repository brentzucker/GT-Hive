<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorites_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/OldGold">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/CardTextStyle"
                android:id="@+id/list_item_favorites_text_view"
                tools:text="Building Name"/>

            <TextView
                style="@style/CardTextStyle"
                android:id="@+id/list_item_favorites_occupancy_text_view"
                android:layout_below="@id/list_item_favorites_text_view"
                tools:text="Building Id"
                />
        </RelativeLayout>

        <ImageView android:id="@+id/list_item_occupancy_status"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:paddingTop="10dp"
                   android:src="@drawable/ic_thumbs_up"/>

        <CheckBox
            android:id="@+id/favorite_button"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_empty_star"
            android:background="#00ffffff"
            android:paddingRight="10dp"
            android:button="@drawable/favorite_button_states"
            android:clickable="true"/>

    </LinearLayout>
</android.support.v7.widget.CardView>