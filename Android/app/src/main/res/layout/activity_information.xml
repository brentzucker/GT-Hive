                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/textView"
                    android:gravity="bottom|right"
                    android:layout_marginRight="50dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:id="@+id/textView"
                    android:gravity="bottom|right"
                    android:layout_marginRight="50dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:id="@+id/textView"
                    android:gravity="bottom|right"
                    android:layout_marginRight="50dp"
                    android:textSize="15dp"/>
            </TableRow>
        </TableLayout>
    </TableRow>
</TableLayout>
